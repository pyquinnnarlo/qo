  <!-- Live Camera Stream -->
  <img src="/video_feed" class="camera-feed" alt="Vision" />

  <script>
    const root = document.getElementById("robot-root");
    const statusText = document.getElementById("status-text");
    const pupils = [document.getElementById("p1"), document.getElementById("p2")];

    // Cute idle eye movement
    function rand(min, max){ return Math.random() * (max - min) + min; }
    setInterval(() => {
      const x = rand(-8, 8);
      const y = rand(-6, 6);
      pupils.forEach(p => p.style.transform = `translate(${x}px, ${y}px)`);
    }, 700);

    // Random blink when idle (no state class)
    setInterval(() => {
      const cls = root.className || "";
      if (!cls.includes("state-")) {
        root.classList.add("blink");
        const eyes = document.querySelectorAll(".eye");
        eyes.forEach(e => e.style.transform = "scaleY(0.12)");
        setTimeout(() => eyes.forEach(e => e.style.transform = ""), 160);
        setTimeout(() => root.classList.remove("blink"), 200);
      }
    }, 3800);

    // Map backend status to state classes
    function setState(stateText){
      root.classList.remove("state-listening","state-thinking","state-speaking");
      const s = stateText.toUpperCase();

      if (s.includes("LISTENING")) root.classList.add("state-listening");
      if (s.includes("THINKING"))  root.classList.add("state-thinking");
      if (s.includes("SPEAKING"))  root.classList.add("state-speaking");
    }

    const evtSource = new EventSource("/status_feed");
    evtSource.onmessage = (event) => {
      const state = event.data || "SYSTEM READY";
      statusText.textContent = state;
      setState(state);
    };
  </script>
