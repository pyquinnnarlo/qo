import speech_recognition as sr

print("Searching for microphones...")
mics = sr.Microphone.list_microphone_names()

print(f"\nFound {len(mics)} devices:")
for i, name in enumerate(mics):
    print(f"Index {i}: {name}")

print("\nLook for your USB microphone name above (e.g., 'USB PnP Audio Device').")
print("Update MIC_INDEX in main.py with that number.")
