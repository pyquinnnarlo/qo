from gpiozero import AngularServo
from time import sleep

# Configure the servo exactly like in your main code
servo = AngularServo(18, min_angle=-90, max_angle=90, min_pulse_width=0.0005, max_pulse_width=0.0025)

print("Testing Servo on GPIO 18...")

try:
    while True:
        print("Opening Gate (90)")
        servo.angle = 90
        sleep(2)
        
        print("Closing Gate (-90)")
        servo.angle = -90
        sleep(2)
except KeyboardInterrupt:
    print("Test Stopped")
