<body>

    <div id="face-container" class="face">
        <div class="eyes-row">
            <div class="eye left"></div>
            <div class="eye right"></div>
        </div>
        <div class="mouth"></div>
    </div>

    <div id="status-text">SYSTEM READY</div>

    <!-- Input Form (Hidden until needed) -->
    <div id="input-area">
        <h2 style="color: #00e5ff; margin:0;">NEW STUDENT DETECTED</h2>
        <p>Please enter your full name:</p>
        <input type="text" id="student-name" placeholder="John Doe" autocomplete="off">
        <button onclick="submitName()">REGISTER</button>
    </div>

    <img src="/video_feed" class="camera-feed" alt="Vision">

    <script>
        const face = document.getElementById('face-container');
        const text = document.getElementById('status-text');
        const inputArea = document.getElementById('input-area');
        const nameInput = document.getElementById('student-name');
        let isInputVisible = false;

        // Listen for Python Status
        const evtSource = new EventSource("/status_feed");
        
        evtSource.onmessage = function(event) {
            const state = event.data;
            text.innerText = state;

            // Reset Face Class
            face.className = 'face';

            // Handle Input Mode
            if (state.includes("INPUT REQUIRED") && !isInputVisible) {
                isInputVisible = true;
                inputArea.style.display = "block";
                face.classList.add('waiting-input');
                nameInput.value = "";
                nameInput.focus();
            }

            // Handle Success/Idle (Hide Input)
            if (!state.includes("INPUT REQUIRED") && isInputVisible) {
                isInputVisible = false;
                inputArea.style.display = "none";
            }

            if (state.includes("REGISTERED")) face.classList.add('success');
        };

        // Send Name to Python
        function submitName() {
            const name = nameInput.value;
            if(!name) return;

            fetch('/register_student', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name: name })
            }).then(() => {
                inputArea.style.display = "none"; // Hide immediately for better UX
            });
        }

        // Allow "Enter" key to submit
        nameInput.addEventListener("keypress", function(event) {
            if (event.key === "Enter") submitName();
        });
    </script>
</body>
