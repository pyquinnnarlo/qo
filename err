    <title>Registration Robot</title>
    <style>
        body {
            background-color: #1a1a1a;
            color: #0f0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            font-family: monospace;
            overflow: hidden;
        }

        /* --- FACE CONTAINER --- */
        .face {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 50px;
            transition: all 0.3s;
        }

        /* --- EYES --- */
        .eyes-row { display: flex; gap: 80px; }
        .eye {
            width: 100px;
            height: 120px;
            background: #00e5ff; /* Cyan */
            border-radius: 40%;
            box-shadow: 0 0 20px #00e5ff;
            transition: all 0.2s;
        }

        /* --- MOUTH --- */
        .mouth {
            width: 150px;
            height: 10px;
            background: #00e5ff;
            border-radius: 10px;
            box-shadow: 0 0 10px #00e5ff;
            transition: all 0.1s;
        }

        /* --- ANIMATIONS / STATES --- */
        
        /* LISTENING: Green, wide eyes */
        .listening .eye { background: #00ff00; height: 140px; box-shadow: 0 0 40px #00ff00; }
        .listening .mouth { background: #00ff00; width: 100px; }

        /* PROCESSING: Purple, pulsing */
        .thinking .eye { 
            background: #d600ff; 
            height: 50px; 
            box-shadow: 0 0 30px #d600ff;
            animation: pulse 0.5s infinite alternate; 
        }
        .thinking .mouth { background: #d600ff; width: 50px; }
        @keyframes pulse { from { transform: scale(1); } to { transform: scale(1.1); } }

        /* SPEAKING: Blue, moving mouth */
        .speaking .eye { background: #00ccff; height: 100px; }
        .speaking .mouth { 
            background: #00ccff; 
            animation: talk 0.2s infinite alternate;
        }
        @keyframes talk {
            0% { height: 10px; width: 150px; border-radius: 10px; }
            100% { height: 60px; width: 100px; border-radius: 50%; }
        }

        /* --- CAMERA OVERLAY --- */
        .camera-feed {
            position: absolute;
            bottom: 20px;
            right: 20px;
            width: 250px;
            border: 2px solid #555;
            border-radius: 10px;
        }
        
        #status-text { margin-top: 40px; font-size: 24px; text-transform: uppercase; letter-spacing: 2px; font-weight: bold; }
    </style>
