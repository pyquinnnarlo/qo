def listen(prompt_text=None):
    if is_registering: return None
    if prompt_text: speak(prompt_text)
    update_status("LISTENING")
    r = sr.Recognizer()
    
    with no_alsa_errors():
        try:
            # FORCE INDEX 1 HERE IF GLOBAL VARIABLE DOESN'T WORK
            mic = sr.Microphone(device_index=1) 
            with mic as source:
                print(" [AUDIO] Adjusting for noise...")
                r.adjust_for_ambient_noise(source, duration=0.5)
                print(" [AUDIO] Listening now...")
                audio = r.listen(source, timeout=5, phrase_time_limit=5)
                update_status("THINKING")
                text = r.recognize_google(audio).lower()
                print(f" [AUDIO DEBUG] User said: '{text}'") # CHECK THIS LOG
                return text
        except sr.WaitTimeoutError:
            print(" [AUDIO DEBUG] Timed out (heard nothing)")
            return None
        except sr.UnknownValueError:
            print(" [AUDIO DEBUG] Heard sound, but could not understand words")
            speak("I did not understand.")
            return None
        except Exception as e:
            print(f" [AUDIO ERROR] {e}")
            speak("Audio error.")
            return None
        finally:
            update_status("IDLE")
